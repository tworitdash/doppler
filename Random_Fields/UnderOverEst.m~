%% radar specification

dr = 50;
dph_deg = 1.8;
dph = dph_deg*pi/180;

r = eps:dr:5e3;
phi = eps:dph:2*pi;
theta = 0;

%% Analytical Reflectivity 

Lambda = 4e2;

[r_, phi_] = meshgrid(r, phi);
dT = 1;
n_rot = 10;
t = eps:dT:dT*n_rot;

phi_0 = 0;

U = 1; V = 1;

Vr = U .* cos(theta) .* cos(phi) + V .* cos(theta) .* sin(phi);

Vph = U .* cos(theta) .* sin(phi) - V .* cos(theta) .* cos(phi);

Eta = sin(2*pi/Lambda * (r_ - V_r * t)) * cos(phi_ - Vph/Vr .* log(r));

figure; plot(r .* cos(theta) .* cis)